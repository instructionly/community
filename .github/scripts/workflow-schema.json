{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Instructionly Workflow",
  "description": "Schema for Instructionly community workflow files",
  "type": "object",
  "required": ["name", "nodes", "edges"],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 40,
      "description": "The workflow name"
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 100,
      "description": "Brief description of the workflow"
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "maxItems": 100,
      "items": {
        "$ref": "#/definitions/node"
      },
      "description": "Workflow nodes (steps)"
    },
    "edges": {
      "type": "array",
      "maxItems": 200,
      "items": {
        "$ref": "#/definitions/edge"
      },
      "description": "Connections between nodes"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "node": {
      "type": "object",
      "required": ["type", "title", "positionX", "positionY"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["start", "end", "action", "conditional"],
          "description": "Node type"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 255,
          "description": "Node title"
        },
        "description": {
          "type": ["string", "null"],
          "maxLength": 1000,
          "description": "Node description"
        },
        "positionX": {
          "type": "integer",
          "description": "X position on canvas"
        },
        "positionY": {
          "type": "integer",
          "description": "Y position on canvas"
        }
      },
      "additionalProperties": false
    },
    "edge": {
      "type": "object",
      "required": ["sourceNodeIndex", "targetNodeIndex"],
      "properties": {
        "sourceNodeIndex": {
          "type": "integer",
          "minimum": 0,
          "description": "Index of source node in nodes array"
        },
        "targetNodeIndex": {
          "type": "integer",
          "minimum": 0,
          "description": "Index of target node in nodes array"
        },
        "label": {
          "type": ["string", "null"],
          "maxLength": 100,
          "description": "Edge label (e.g., 'Yes', 'No')"
        }
      },
      "additionalProperties": false
    }
  }
}
